if ! command -v zenity > /dev/null
then
  logger "ERROR (corgi-gui-sudo-prompt): zenity not found. Please install zenity. Exiting..."
  echo "ERROR (corgi-gui-sudo-prompt): zenity not found. Please install zenity. Exiting..."
  exit 1
fi

currentDirectory="`dirname "$0"`"
currentDirectory="`cd "$currentDirectory" ; pwd -P `"
parentDirectory="`dirname $currentDirectory`"
corgiGuiSudoPromptFifo="$parentDirectory/share/info/corgi/fifo/CORGI_GUI_SUDO_AUTHENTICATION_MESSAGE"

corgiGuiSudoAuthenticationMessage="`cat < $corgiGuiSudoPromptFifo`"

if [ -z "$corgiGuiSudoAuthenticationMessage" ]
then
  corgiGuiSudoAuthenticationMessage='The requested action requires authentication.'
fi

zenity --forms --add-password='Password:' --title='Authentication Required' --text="$corgiGuiSudoAuthenticationMessage"