#!/bin/sh

corgiDisplaysManagementLib="/usr/local/lib/corgi/corgi-displays-management.shlib"

if [ ! -e "$corgiDisplaysManagementLib" ]
then
  logger "ERROR (corgi-display-brightness-control): The Corgi Displays Management library is not present. Exiting..."
  echo "ERROR (corgi-display-brightness-control): The Corgi Displays Management library is not present. Exiting..."
  exit 1
fi

. "$corgiDisplaysManagementLib"

setDisplayBrightness "$@"
